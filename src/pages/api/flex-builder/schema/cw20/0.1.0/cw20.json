{
    "schema": {
        "$schema": "http://json-schema.org/draft-07/schema#",
        "title": "Token",
        "description": "Set a new Andromeda Token ADO.",
        "type": "object",
        "required": [
            "decimals",
            "initial_balances",
            "name",
            "symbol"
        ],
        "properties": {
            "decimals": {
                "type": "integer",
                "format": "uint8",
                "minimum": 0,
                "title": "Decimal positions for Token",
                "description": "The number of decimals to be used for the token."
            },
            "initial_balances": {
                "type": "array",
                "title": "Starting Balances",
                "description": "Used to initiate balances for addresses. Contains an address and the amount of tokens for that address.",
                "items": {
                    "type": "object",
                    "required": [
                        "address",
                        "amount"
                    ],
                    "properties": {
                        "address": {
                            "type": "string",
                            "title": "Address",
                            "$help": "The address to recieve tokens."
                        },
                        "amount": {
                            "title": "Amount of Tokens",
                            "type": "string"
                        }
                    }
                }
            },
            "marketing": {
                "title": "Marketing Information",
                "anyOf": [
                    {
                        "type": "object",
                        "title": "Logo",
                        "properties": {
                            "description": {
                                "type": [
                                    "string",
                                    "null"
                                ],
                                "title": "Token Description",
                                "description": "A longer description of the token and it's utility. Designed for tooltips or such."
                            },
                            "logo": {
                                "title": "Token Logo",
                                "anyOf": [
                                    {
                                        "title": "Upload",
                                        "description": "This is used for uploading logo data, or setting it in InstantiateData",
                                        "oneOf": [
                                            {
                                                "title": "Externally Hosted",
                                                "description": "A reference to an externally hosted logo. Must be a valid HTTP or HTTPS URL.",
                                                "type": "object",
                                                "required": [
                                                    "url"
                                                ],
                                                "properties": {
                                                    "url": {
                                                        "type": "string",
                                                        "title": "Logo URL"
                                                    }
                                                },
                                                "additionalProperties": false
                                            },
                                            {
                                                "title": "Stored on Chain",
                                                "description": "Logo content stored on the blockchain. !Enforce maximum size of 5KB on all variants!",
                                                "type": "object",
                                                "required": [
                                                    "embedded"
                                                ],
                                                "properties": {
                                                    "embedded": {
                                                        "title": "Embedded",
                                                        "description": "This is used to store the logo on the blockchain in an accepted format. Enforce maximum size of 5KB on all variants.",
                                                        "oneOf": [
                                                            {
                                                                "title": "Logo as SVG",
                                                                "description": "Store the Logo as an SVG file. The content must conform to the spec at https://en.wikipedia.org/wiki/Scalable_Vector_Graphics (The contract should do some light-weight sanity-check validation)",
                                                                "type": "object",
                                                                "required": [
                                                                    "svg"
                                                                ],
                                                                "properties": {
                                                                    "svg": {
                                                                        "type": "string",
                                                                        "title": "SVG File to Store"
                                                                    }
                                                                },
                                                                "additionalProperties": false
                                                            },
                                                            {
                                                                "title": "Logo as PNG",
                                                                "description": "Store the Logo as a PNG file. This will likely only support up to 64x64 or so within the 5KB limit.",
                                                                "type": "object",
                                                                "required": [
                                                                    "png"
                                                                ],
                                                                "properties": {
                                                                    "png": {
                                                                        "title": "PNG File to Store",
                                                                        "type": "string"
                                                                    }
                                                                },
                                                                "additionalProperties": false
                                                            }
                                                        ]
                                                    }
                                                },
                                                "additionalProperties": false
                                            }
                                        ]
                                    },
                                    {
                                        "type": "null",
                                        "title": "None"
                                    }
                                ]
                            },
                            "marketing": {
                                "type": [
                                    "string",
                                    "null"
                                ],
                                "title": "Authorized Marketing Address",
                                "description": "The address (if any) who can update this data structure."
                            },
                            "project": {
                                "type": [
                                    "string",
                                    "null"
                                ],
                                "title": "Project URL",
                                "description": "A URL pointing to the project behind this token."
                            }
                        }
                    },
                    {
                        "type": "null",
                        "title": "None",
                        "description": "No Logo Specified "
                    }
                ]
            },
            "mint": {
                "title": "Minter Assignment",
                "anyOf": [
                    {
                        "title": "Minter",
                        "type": "object",
                        "required": [
                            "minter"
                        ],
                        "properties": {
                            "cap": {
                                "title": "Supply Cap",
                                "description": "A hard cap on total supply that can be achieved by minting. !The cap refers to the total supply. If None, there is unlimited cap.",
                                "anyOf": [
                                    {
                                        "type": "string",
                                        "title": "Hard cap"
                                    },
                                    {
                                        "type": "null",
                                        "title": "None"
                                    }
                                ]
                            },
                            "minter": {
                                "title": "Minter",
                                "type": "string",
                                "description": "The address to assign as a minter."
                            }
                        }
                    },
                    {
                        "type": "null",
                        "title": "None"
                    }
                ]
            },
            "modules": {
                "title": "Modules",
                "description": "A struct describing a token module, provided with the instantiation message this struct is used to record the info about the module and how/if it should be instantiated",
                "type": [
                    "array",
                    "null"
                ],
                "items": {
                    "type": "object",
                    "required": [
                        "address",
                        "is_mutable",
                        "module_type"
                    ],
                    "properties": {
                        "address": {
                            "title": "Address",
                            "type": "object",
                            "required": [
                                "identifier"
                            ],
                            "properties": {
                                "identifier": {
                                    "title": "Identifier",
                                    "description": "Can be either an address or identifier of an ADO in a app.",
                                    "type": "string"
                                }
                            }
                        },
                        "is_mutable": {
                            "title": "Is Mutable?",
                            "type": "boolean"
                        },
                        "module_type": {
                            "title": "Type of Module",
                            "type": "string"
                        }
                    }
                }
            },
            "name": {
                "type": "string",
                "title": "Name"
            },
            "symbol": {
                "type": "string",
                "title": "Symbol"
            }
        },
        "$id": "cw20",
        "classifier": "",
        "version": "0.1.0",
        "class": "baseADO"
    },
    "ui-schema": {},
    "form-data": {}
}