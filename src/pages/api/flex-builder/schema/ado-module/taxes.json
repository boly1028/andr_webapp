{
  "schema": {
    "title": "Add Built-In Taxes",
    "description": "Fees built into tax the ADO at point of sale, paid to specified Wallet Addresses.",
    "$id": "/schemas/ado-module/taxes",
    "type": "object",
    "properties": {
      "description": {
        "type": "string",
        "title": "Tax Description"
      },
      "distribution_type": {
        "type": "object",
        "title": "Distribution Type",
        "anyOf": [
          {
            "title": "By Percentage",
            "type": "object",
            "ui:group": true,
            "properties": {
              "distribution_percentage": {
                "title": "% fee of sale price",
                "type": "number"
              }
            }
          },
          {
            "title": "By Flat Fee",
            "type": "object",
            "ui:group": true,
            "properties": {
              "distribution_flat_fee": {
                "type": "number",
                "title": "Flat fee"
              },
              "distribution_flat_fee_currency": {
                "type": "string",
                "title": "Currency type",
                "enum": ["usd"],
                "enumNames": ["USD"],
                "default": "usd"
              }
            }
          }
        ]
      },
      "payment_address": {
        "type": "array",
        "items": {
          "type": "string"
        },
        "title": "Alphanumeric Terra Address"
      }
    }
  },
  "ui-schema": {
    "description": {
      "ui:help": "* Optional - Information is solely for organizational use."
    },
    "payment_address": { "ui:help": "Address recieving funds for tax." }
  },
  "form-data": {}
}
