{
  "schema": {
    "type": "object",
    "required": ["update_auction"],
    "properties": {
      "update_auction": {
        "type": "object",
        "required": [
          "coin_denom",
          "duration",
          "start_time",
          "token_address",
          "token_id"
        ],
        "properties": {
          "coin_denom": { "type": "string", "title": "Coin denom" },
          "duration": {
            "type": "integer",
            "format": "uint64",
            "minimum": 0,
            "title": "Duration"
          },
          "min_bid": {
            "anyOf": [
              {
                "type": "string",
                "$original_type": "Uint128"
              },
              { "type": "null" }
            ],
            "title": "Min bid"
          },
          "start_time": {
            "type": "integer",
            "format": "uint64",
            "minimum": 0,
            "title": "Start time"
          },
          "token_address": { "type": "string", "title": "Token address" },
          "token_id": { "type": "string", "title": "Token id" },
          "whitelist": {
            "type": ["array", "null"],
            "items": {
              "type": "string",
              "$original_type": "Addr"
            },
            "title": "Whitelist"
          }
        },
        "additionalProperties": false,
        "title": "Update auction"
      }
    },
    "additionalProperties": false,
    "title": "Update auction",
    "$id": "update-auction",
    "class": "modifier",
    "version": "0.2.1",
    "classifier": ""
  },
  "ui-schema": {
    "update_auction": {
      "ui:order": ["coin_denom", "token_address", "token_id", "duration", "start_time", "min_bid", "whitelist"],
      "coin_denom": {
        "ui:widget": "text",
        "ui:placeholder": "Enter coin denomination this auction will be conducted in. Only use micro-units, e.g., 'uluna'"
      },
      "duration": {
        "ui:widget": "duration",
        "ui:title": "Auction Duration",
        "ui:description": "Enter the duration of the auction."
      },
      "min_bid": {
        "ui:options": { "optionNames": ["Minimum Bid", "None"] },
        "ui:title": "Minimum Bid",
        "ui:placeholder": "Enter the minimum bid amount. Use micro units, e.g., '1000000 uluna' for 1 Luna."
      },
      "start_time": {
        "ui:widget": "dateTime",
        "ui:title": "Auction Start Time",
        "ui:description": "Select the start time and date for the auction."
      },
      "token_address": {
        "ui:widget": "text",
        "ui:description": "Enter the address of the token whose auction you wish to update.",
        "ui:placeholder": "example "
      },
      "token_id": {
        "ui:widget": "text",
        "ui:description": "Enter the token ID of the token you wish to update.",
        "ui:placeholder": "Enter token ID"
      }
    }
  },
  "form-data": {}
}
