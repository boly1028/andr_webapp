{
    "schema": {
        "$schema": "http://json-schema.org/draft-07/schema#",
        "title": "Auction",
        "description": "An ADO to facilitate auctioning of an Andromeda token.",
        "type": "object",
        "properties": {
            "modules": {
                "type": [
                    "array",
                    "null"
                ],
                "items": {
                    "description": "A struct describing a token module, provided with the instantiation message this struct is used to record the info about the module and how/if it should be instantiated",
                    "type": "object",
                    "required": [
                        "address",
                        "is_mutable",
                        "module_type"
                    ],
                    "properties": {
                        "address": {
                            "type": "object",
                            "required": [
                                "identifier"
                            ],
                            "properties": {
                                "identifier": {
                                    "description": "Can be either an address or app component name of a specific ADO within an app",
                                    "type": "string"
                                }
                            }
                        },
                        "is_mutable": {
                            "type": "boolean"
                        },
                        "module_type": {
                            "type": "string"
                        }
                    }
                },
                "title": "modules"
            }
        },
        "$id": "auction",
        "classifier": "sale",
        "class": "baseADO",
        "version": "0.1.0"
    },
    "ui-schema": {
        "modules": {
            "ui:options": {
                "title": "Selected Modules",
                "description": "An optional vector of Andromeda Modules that can be attached to the contract. \"rates\", \"address-list\", and \"receipt\" modules can be added."
            },
            "items": {
                "ui:options": {
                    "title": "Module"
                },
                "ui:order": [
                    "*",
                    "is_mutable"
                ],
                "address": {
                    "ui:options": {
                        "title": "Add Module",
                        "description": "",
                        "info": "Allowed modules: \"rates\", \"address-list\", and \"receipt\"",
                        "infoType": "error"
                    },
                    "identifier": {
                        "ui:options": {
                            "title": "Identifier",
                            "description": "Can be either an address or app component name of a specific ADO within an app"
                        }
                    }
                },
                "module_type": {
                    "ui:options": {
                        "title": "Module Type",
                        "description": "The name of the module to add. Can be set one of the following: \"rates\", \"address-list\", and \"receipt\"."
                    }
                },
                "is_mutable": {
                    "ui:options": {
                        "title": "Is Module Able to be Modified?",
                        "description": "Whether the module can be later modified or not."
                    }
                }
            }
        }
    },
    "form-data": {}
}