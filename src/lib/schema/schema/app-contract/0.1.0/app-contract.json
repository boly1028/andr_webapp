{
    "schema": {
        "$schema": "http://json-schema.org/draft-07/schema#",
        "type": "object",
        "title": "Publish as an App",
        "description": "Publishing configurations to publish the ADO as an App",
        "required": [
            "app",
            "name",
            "primitive_contract"
        ],
        "properties": {
            "app": {
                "type": "array",
                "items": {
                    "type": "object",
                    "required": [
                        "ado_type",
                        "instantiate_msg",
                        "name"
                    ],
                    "properties": {
                        "ado_type": {
                            "type": "string"
                        },
                        "instantiate_msg": {
                            "description": "Binary is a wrapper around Vec<u8> to add base64 de/serialization with serde. It also adds some helper methods to help encode inline.\n\nThis is only needed as serde-json-{core,wasm} has a horrible encoding for Vec<u8>",
                            "type": "string"
                        },
                        "name": {
                            "type": "string"
                        }
                    }
                },
                "title": "Apps"
            },
            "name": {
                "type": "string",
                "title": "App Name",
                "description": "The desired name of the app."
            },
            "primitive_contract": {
                "type": "string",
                "title": "Primitive ADO Address",
                "description": "The address of the primitve ADO used to supply data to the App."
            }
        },
        "$id": "app-contract",
        "classifier": "",
        "class": "system",
        "version": "0.1.0"
    },
    "ui-schema": {
        "primitive_contract": {
            "ui:readonly": "readonly"
        },
        "ui:order": [
            "*",
            "app"
        ]
    },
    "form-data": {
        "primitive_contract": "{{ SYSTEM GENERATED }}"
    }
}