{
  "schema": {
    "description": "Permanently destroys tokens.",
    "type": "object",
    "required": ["burn"],
    "properties": {
      "burn": {
        "type": "object",
        "required": ["amount", "token_id"],
        "properties": {
          "amount": {
            "description": "Amount description...",
            "type": "string",
            "$original_type": "Uint128",
            "title": "Amount"
          },
          "token_id": {
            "description": "Unique identifier of the token to be burned.",
            "type": "string",
            "title": "Token ID"
          }
        },
        "additionalProperties": false,
        "title": "Burn"
      }
    },
    "additionalProperties": false,
    "title": "Burn",
    "$id": "burn",
    "class": "modifier",
    "version": "0.2.1",
    "classifier": ""
  },
  "ui-schema": {
    "burn": {
      "ui:options": {
        "alerts": [
          {
            "text": "This is an irrevocable action and cannot be undone!",
            "type": "error"
          }
        ]
      },
      "amount": {
        "ui:widget": "text",
        "ui:placeholder": "10000",
        "ui:description": "Specify the amount of tokens to burn."
      },
      "token_id": {
        "ui:widget": "text",
        "ui:placeholder": "e.g., Token123",
