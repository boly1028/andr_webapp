{
  "schema": {
    "description": "Creates new tokens and adds to the recipient balance.",
    "type": "object",
    "required": ["mint"],
    "properties": {
      "mint": {
        "type": "object",
        "required": ["amount", "recipient"],
        "properties": {
          "amount": {
            "description": "Enter the amount of tokens you wish to mint.",
            "type": "string",
            "$original_type": "Uint128",
            "title": "Amount"
          },
          "recipient": { 
            "type": "string", 
            "title": "Recipient" 
          }
        },
        "additionalProperties": false,
        "title": "Mint"
      }
    },
    "additionalProperties": false,
    "title": "Mint",
    "$id": "mint",
    "class": "modifier",
    "version": "0.2.1",
    "classifier": ""
  },
  "ui-schema": {
    "mint": {
      "ui:options":{
        "alerts": [
          {
            "text": "Can only be performed by the authorized minter, if declared.",
            "type": "error"
          }
        ]
      },
      "amount": {
        "ui:widget": "text",
        "ui:placeholder": "1000000000",
        "ui:description": "Specify the amount of tokens to mint. Use a string format for large numbers."
      },
      "recipient": {
        "ui:widget": "text",
        "ui:placeholder": "andr1v54e0pskn029vtp863mpxccn2g20tx0a6h95rj",
        "ui:description": "The address of the recipient who will receive the minted tokens."
      }
    }
  },
  "form-data": {}
}
