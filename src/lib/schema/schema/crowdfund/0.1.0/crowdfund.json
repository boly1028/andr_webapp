{
    "schema": {
        "$schema": "http://json-schema.org/draft-07/schema#",
        "title": "Crowdfund",
        "description": "An ADO to allow the creation of a crowdfund for a token and can include minting.",
        "type": "object",
        "required": [
            "can_mint_after_sale",
            "token_address"
        ],
        "properties": {
            "can_mint_after_sale": {
                "type": "boolean",
                "title": "can_mint_after_sale"
            },
            "modules": {
                "type": [
                    "array",
                    "null"
                ],
                "items": {
                    "description": "A struct describing a token module, provided with the instantiation message this struct is used to record the info about the module and how/if it should be instantiated",
                    "type": "object",
                    "required": [
                        "address",
                        "is_mutable",
                        "module_type"
                    ],
                    "properties": {
                        "address": {
                            "type": "object",
                            "required": [
                                "identifier"
                            ],
                            "properties": {
                                "identifier": {
                                    "description": "Can be either an address or app component name of a specific ADO within an app",
                                    "type": "string"
                                }
                            }
                        },
                        "is_mutable": {
                            "type": "boolean"
                        },
                        "module_type": {
                            "type": "string"
                        }
                    }
                },
                "title": "modules"
            },
            "token_address": {
                "type": "object",
                "required": [
                    "identifier"
                ],
                "properties": {
                    "identifier": {
                        "description": "Can be either an address or app component name of a specific ADO within an app",
                        "type": "string"
                    }
                },
                "title": "token_address"
            }
        },
        "$id": "crowdfund",
        "classifier": "sale",
        "class": "baseADO",
        "version": "0.1.0"
    },
    "ui-schema": {
        "ui:order": [
            "token_address",
            "modules",
            "can_mint_after_sale",
            "*"
        ],
        "can_mint_after_sale": {
            "ui:options": {
                "title": "Mint after sale allowed?",
                "description": "A flag to whether minting is allowed after a sale has been done. Minting is never allowed during a sale."
            }
        },
        "modules": {
            "ui:options": {
                "title": "Additional ADO's",
                "description": "An optional vector of Andromeda Modules that can be attached to the contract. \"rates\", \"address-list\", and \"receipt\" modules can be added."
            },
            "items": {
                "ui:options": {
                    "title": "Module"
                },
                "ui:order": [
                    "*",
                    "is_mutable"
                ],
                "address": {
                    "ui:options": {
                        "title": "Add Module",
                        "description": "",
                        "alerts": [
                            {
                                "text": "Allowed modules: \"rates\", \"address-list\", and \"receipt\"",
                                "type": "error"
                            }
                        ]
                    },
                    "identifier": {
                        "ui:options": {
                            "title": "Identifier",
                            "description": "Can be either an address or app component name of a specific ADO within an app"
                        }
                    }
                },
                "module_type": {
                    "ui:options": {
                        "title": "Module Type",
                        "description": "The name of the module to add. Can be set one of the following: \"rates\", \"address-list\", and \"receipt\"."
                    }
                },
                "is_mutable": {
                    "ui:options": {
                        "title": "Is Module Able to be Modified?",
                        "description": "Whether the module can be later modified or not."
                    }
                }
            }
        },
        "token_address": {
            "ui:options": {
                "title": "Token Address",
                "description": "The contract address of the token."
            },
            "identifier": {
                "ui:options": {
                    "title": "Identifier",
                    "description": " ",
                    "help": "Can be either an address or app component name of a specific ADO within an app"
                }
            }
        }
    },
    "form-data": {}
}