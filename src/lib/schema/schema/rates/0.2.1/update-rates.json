{
  "schema": {
    "type": "object",
    "required": ["update_rates"],
    "properties": {
      "update_rates": {
        "type": "object",
        "required": ["rates"],
        "properties": {
          "rates": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["is_additive", "rate", "recipients"],
              "properties": {
                "description": { "type": ["string", "null"] },
                "is_additive": { "type": "boolean" },
                "rate": {
                  "description": "An enum used to define various types of fees",
                  "oneOf": [
                    {
                      "description": "A flat rate fee",
                      "type": "object",
                      "required": ["flat"],
                      "properties": {
                        "flat": {
                          "type": "object",
                          "required": ["amount", "denom"],
                          "properties": {
                            "amount": {
                              "description": "A thin wrapper around u128 that is using strings for JSON encoding/decoding",
                              "type": "string",
                              "$original_type": "Uint128"
                            },
                            "denom": { "type": "string" }
                          },
                          "$original_type": "Coin"
                        }
                      },
                      "additionalProperties": false
                    },
                    {
                      "description": "A percentage fee",
                      "type": "object",
                      "required": ["percent"],
                      "properties": {
                        "percent": {
                          "type": "object",
                          "required": ["percent"],
                          "properties": {
                            "percent": {
                              "description": "Enter the rate as a percentage.(e.g., 0.05 for 5%)",
                              "type": "string",
                              "$original_type": "Decimal"
                            }
                          },
                          "additionalProperties": false,
                          "$original_type": "PercentRate"
                        }
                      },
                      "additionalProperties": false
                    }
                  ],
                  "$original_type": "Rate"
                },
                "recipients": {
                  "type": "array",
                  "items": {
                    "description": "A simple struct used for inter-contract communication",
                    "type": "object",
                    "required": ["address"],
                    "properties": {
                      "address": {
                        "description": "An address that can be used within the Andromeda ecosystem",
                        "type": "string",
                        "$original_type": "AndrAddr"
                      },
                      "ibc_recovery_address": {
                        "anyOf": [
                          {
                            "description": "An address within the Andromeda ecosystem",
                            "type": "string",
                            "$original_type": "AndrAddr"
                          },
                          { "type": "null" }
                        ]
                      },
                      "msg": {
                        "anyOf": [
                          {
                            "description": "Binary is a wrapper around Vec<u8> to add base64 de/serialization",
                            "type": "string",
                            "$original_type": "Binary"
                          },
                          { "type": "null" }
                        ]
                      }
                    },
                    "additionalProperties": false,
                    "$original_type": "Recipient"
                  }
                }
              },
              "additionalProperties": false,
              "$original_type": "RateInfo"
            },
            "title": "Rates"
          }
        },
        "additionalProperties": false,
        "title": "Update rates"
      }
    },
    "additionalProperties": false,
    "title": "Update rates",
    "$id": "update-rates",
    "class": "modifier",
    "version": "0.2.1",
    "classifier": ""
  },
  "ui-schema": {
    "update_rates": {
      "ui:options": {
        "title": "Update Rates",
        "description": "Modify the rates applied to transactions."
      },
      "rates": {
        "ui:options": {
          "title": "Rates Configuration",
          "description": "Define the fees and their distribution for transactions."
        },
        "items": {
          "ui:options": { "title": "Rate Details" },
          "description": {
            "ui:options": {
              "title": "Rate Description",
              "placeholder": "e.g., This is how my rate is strucrured",
              "description": "Provide a brief explanation of the rate being applied."
            }
          },
          "is_additive": {
            "ui:options": {
              "title": "Is Additive",
              "description": "Indicate if the rate is additive to the transaction amount."
            }
          },
          "rate": {
            "ui:options": { "optionNames": ["Flat Rate", "Percentage Rate"] },
            "flat": {
              "ui:options": { "title": "Flat Rate Details" },
              "amount": {
                "ui:options": {
                  "title": "Amount",
                  "description": "Enter the fixed amount for the flat rate.",
                  "placeholder": "e.g,. 1000"
                }
              },
              "denom": {
                "ui:options": {
                  "title": "Currency",
                  "description": "Specify the currency denomination for the flat rate. Use micro-denominations, so uluna instead of Luna.",
                  "placeholder": "e.g., uluna"
                }
              }
            },
            "percent": {
              "percent": {
                "ui:options": {
                  "title": "Rate Percentage",
                  "description": "Enter the percentage value for the rate. (e.g., 0.05 for 5%)",
                  "placeholder": "e.g., 0.05"
                }
              }
            }
          },
          "recipients": {
            "ui:options": {
              "title": "Recipients of Rate Adjustment",
              "description": "Specify the addresses to receive the rate specified."
            },
            "items": {
              "ui:options": { "title": "Recipient Information" },
              "address": {
                "ui:options": {
                  "title": "Recipient Address",
                  "description": "Enter the recipient's Andromeda address.",
                  "placeholder": "e.g., andr1..."
                }
              },
              "ibc_recovery_address": {
                "ui:options": {
                  "title": "IBC Recovery Address (Optional)",
                  "description": "Provide an optional IBC recovery address.",
                  "placeholder": "e.g., andr1...",
                  "optionNames": ["Provide IBC Address", "None"]
                }
              },
              "msg": {
                "ui:options": {
                  "title": "Message (Optional)",
                  "description": "Include an optional message for the recipient.",
                  "optionNames": ["Attach Message", "None"]
                }
              }
            }
          }
        }
      }
    }
  },
  "form-data": {}
}
